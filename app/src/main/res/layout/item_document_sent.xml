<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/chat_background_gradient"
        android:padding="@dimen/_10sdp"
        android:maxWidth="@dimen/_280sdp"
        android:layout_marginLeft="@dimen/_30sdp">

        <!-- Document icon and name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/documentIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/baseline_insert_drive_file_24"
                android:contentDescription="Document Icon"
                android:layout_marginEnd="@dimen/_8sdp" />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document.pdf"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp" />



        </LinearLayout>

        <TextView
            android:id="@+id/documentCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:visibility="gone" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="end"
          android:layout_marginTop="@dimen/_4sdp">
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 PM"
            android:textColor="#888888"
            android:textSize="@dimen/_12ssp"
             />

        <ImageView
            android:id="@+id/statusTick"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/baseline_done_24"
            android:visibility="visible"
            app:tint="@color/black" />
          <TextView
              android:id="@+id/failedLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Failedy"
              android:textColor="@android:color/holo_red_dark"
              android:textSize="@dimen/_10ssp"
              android:layout_marginStart="@dimen/_4sdp"
              android:visibility="gone" />
      </LinearLayout>

    </LinearLayout>
</LinearLayout>
